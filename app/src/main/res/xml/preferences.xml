<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="Application">

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="applicationUpdates"
            android:summary="This option if selected will allow the application to check for latest versions."
            android:title="Application Updates" />
        <ListPreference
            android:defaultValue="1"
            android:entries="@array/listArray"
            android:entryValues="@array/listValues"
            android:key="downloadType"
            android:summary="Select the type of map that you would like to use"
            android:title="Map Type" />

        <RingtonePreference
            android:summary="Select emergency alarm tone"
            android:title="Alarm Tone" />
    </PreferenceCategory>

    <PreferenceCategory android:title="My Account">

        <EditTextPreference
            android:key="username"
            android:summary="Please provide your username"
            android:title="Your Name" />

        <EditTextPreference
            android:key="email"
            android:summary="rishabh.pugalia@gmail.com"
            android:title="Email" />
        <ListPreference
            android:entries="@array/country"
            android:entryValues="@array/countryValues"
            android:key="country"
            android:summary="Select your city"
            android:title="Country" />
    </PreferenceCategory>

    <PreferenceCategory android:title="Advanced">

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="receiveNotifications"
            android:summary="Want to receive Push Notifications ?"
            android:title="Receive Notifications" />

    </PreferenceCategory>

    <PreferenceCategory android:title="Sub Screens">

        <PreferenceScreen
            android:key="voicemail_category"
            android:persistent="false"
            android:title="Voicemail">

            <Preference
                android:key="provider"
                android:summary="Airtel"
                android:title="Provider" />

            <!-- and other preference objects ... -->

        </PreferenceScreen>

    </PreferenceCategory>
</PreferenceScreen>