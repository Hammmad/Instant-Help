<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hammad.instanthelp.Fragments.HelpFragment">

    <!-- TODO: Update blank fragment layout -->
    <Button
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/blood_require_button"
        android:text="@string/blood_required"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:layout_centerHorizontal="true"
        android:id="@+id/first_aid_button"
        android:layout_below="@id/blood_require_button"
        android:text="@string/first_aid_required"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:layout_centerHorizontal="true"

        android:layout_below="@id/first_aid_button"
        android:id="@+id/map_help_button"
        android:text="@string/map_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/signout_textView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="@string/signOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/register_volunteer_textview"
        android:text="@string/register_as_volunteer"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/userName_textView"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
