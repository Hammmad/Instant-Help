<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hammad.instanthelp.Fragments.HomeFragment"
    >

    <!-- TODO: Update blank fragment layout -->
    <Button
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/blood_require_button"
        android:text="@string/blood_required"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:layout_centerHorizontal="true"
        android:id="@+id/first_aid_button"
        android:layout_below="@id/blood_require_button"
        android:text="@string/first_aid_required"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:layout_centerHorizontal="true"

        android:layout_below="@id/first_aid_button"
        android:id="@+id/map_help_button"
        android:text="@string/map_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>